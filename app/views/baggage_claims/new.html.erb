select {
        width: 300px;
        height: 30px;
      }
</style>
<body>
<%= form_with model: @baggage_claim, url: booking_baggage_claims_path(@booking) do |f| %>
  <div class="form-group">
     <%= f.hidden_field :booking_id, value: @booking.id %>
  </div>

   <div class="form-group">
    <h2><%= f.label :description %></h2>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <h2><%= f.label :status %></h2>
    <%= f.select :status, BaggageClaim.statuses %>
  </div>

  <%= f.submit %>
<% end %>
</body>