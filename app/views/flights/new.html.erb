
<h1>New Flight</h1>
<%= stylesheet_link_tag "styles4.css"%>
<%= form_with model: @flight, url: flights_path do |form| %>
  <div class="form-group">
    <%= form.label :flight_no %>
    <%= form.text_field :flight_no, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :flight_name %>
    <%= form.text_field :flight_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :source %>
    <%= form.text_field :source, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :destination %>
    <%= form.text_field :destination, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :takeoff_time %>
    <%= form.datetime_select :takeoff_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :landing_time %>
    <%= form.datetime_select :landing_time, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :total_seats %>
    <%= form.number_field :total_seats, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :available_seats %>
    <%= form.number_field :available_seats, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :occupied_seats %>
    <%= form.number_field :occupied_seats, class: "form-control" %>
  </div>

  <%= form.submit "Create Flight", class: "btn btn-primary" %>
<% end %>
